<p id="notice"><%= notice %></p>
  <%= render 'posts/comment' %>
  
<p>
  <!-- <b>Title:</b> -->
  <b><%= @post.title %></b>
</p>

  <!-- <b>Body:</b> -->
 <p> <%= @post.body %></p>

<p>
 <!--  <b>Published:</b>  -->
  <%= @post.published_at.strftime(("Published on %m/%d/%Y")) %>
</p> 

<p>
  <!-- <b>Author:</b> -->
  <%#= @post.author %>
</p>
<!-- <p>
  <b>Featured:</b>
  <%= @post.featured %>
</p> -->

  <h3> Comments (<%= @post.comments.count %>) </h3>

  <% @post.comments.each do |comment| %>
    <% unless comment.id.nil? %>
      <%= comment.author %>
      <small> <%= comment.created_at.strftime(("Commented on %m/%d/%Y")) %> </small>
      <%= simple_format(comment.message) %>
    <% end %>
  <% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path(@post)%>
<%= link_to 'Show', posts_path(@post) %>
