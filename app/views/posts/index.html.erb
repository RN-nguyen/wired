<h1>Rebecca's Blog</h1>

<% @posts.each do |post| %>
    <div>
      <h3><%= post.title %></h3>
      <p><%= post.body %></p>
      <p><%= post.published_at.strftime(("Published on %m/%d/%Y at %I:%M%P")) %>
      </p>
    
    <%= link_to 'Comment', post %>
    <%= link_to 'Edit', edit_post_path(post) %>
    <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>

<% end %>


<br />

